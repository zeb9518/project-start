{
  "name": "vue3-ts-vite-electron",
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && electron .",
    "electron:serve": "cross-env NODE_ENV=development concurrently -k \"yarn run dev\" \"yarn run electron\"",
    "electron:generate-icons": "electron-icon-builder --input=./public/logo.png --output=build --flatten",
    "electron:build": "cross-env NODE_ENV=production vite build && electron-builder"
  },
  "dependencies": {
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^24.3.1",
    "electron-builder": "^23.6.0",
    "electron-icon-builder": "^2.0.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.8",
    "vue-tsc": "^1.6.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "asar": true,
    "asarUnpack": [
      "**\\*.{node,dll}",
      "dist\\main\\worker\\*.js"
    ],
    "appId": "com.dweb.vue3-ts-vite-electron",
    "productName": "Vue3TsViteElectron",
    "copyright": "Copyright Â© 2023 <your-name>",
    "mac": {
      "icon": "./build/icons/icon.icons",
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "./build/icons/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "./build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./build/icons/icon.ico",
      "uninstallerIcon": "./build/icons/icon.ico",
      "installerHeaderIcon": "./build/icons/icon.ico",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "publish": {
      "provider": "generic",
      "url": "",
      "channel": "latest"
    }
  },
  "description": "A Vue.js project",
  "license": "MIT"
}
